    echo -e "${green}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
    echo -e ""
    
    echo -e "${magenta}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${neutral}"
    echo -e "${magenta}â•‘                              MENU UTAMA                               â•‘${neutral}"
    echo -e "${magenta}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
    echo -e "${magenta}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${neutral}"
    echo -e "       ${green}[1]${neutral} Kelola SSH/OpenVPN       â”‚  ${green}[5]${neutral} Kelola Shadowsocks"
    echo -e "       ${green}[2]${neutral} Kelola VMess             â”‚  ${green}[6]${neutral} Setup Bot Notifikasi"
    echo -e "       ${green}[3]${neutral} Kelola VLess             â”‚  ${green}[7]${neutral} Menu Bot Telegram"
    echo -e "       ${green}[4]${neutral} Kelola Trojan            â”‚  ${green}[8]${neutral} Menu Features"
    echo -e ""
    echo -e "                             ${red}[x]${neutral} Keluar dari Panel"
    echo -e "${magenta}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
    echo -e ""
    
    echo -e "${gray}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${neutral}"
    echo -e "${gray}â•‘                            INFORMASI SCRIPT                           â•‘${neutral}"
    echo -e "${gray}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
    echo -e "              ${green}SCRIPT VERSION:${neutral} 4.0.1    â”‚    ${green}AUTHOR:${neutral} Alrescha79"
    echo -e "${gray}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
    echo -e ""
    
    echo -ne "${yellow}Pilih menu [1-8 atau x]: ${neutral}"
    read choice
    
    echo -e ""
    case $choice in
        1 | 01) 
            echo -e "${cyan}Membuka menu SSH/OpenVPN...${neutral}"
            menussh 
            ;;
        2 | 02) 
            echo -e "${cyan}Membuka menu VMess...${neutral}"
            menuvmess 
            ;;
        3 | 03) 
            echo -e "${cyan}Membuka menu VLess...${neutral}"
            menuvless 
            ;;
        4 | 04) 
            echo -e "${cyan}Membuka menu Trojan...${neutral}"
            menutrojan 
            ;;
        5 | 05) 
            echo -e "${cyan}Membuka menu Shadowsocks...${neutral}"
            menushadowsocks 
            ;;
        6 | 06) 
            echo -e "${cyan}Setup Bot Telegram...${neutral}"
            setup_bot_telegram 
            ;;
        7 | 07) 
            echo -e "${cyan}Membuka Bot Server...${neutral}"
            bot server 
            ;;
        8 | 08) 
            echo -e "${cyan}Membuka menu Features...${neutral}"
            features 
            ;;
        x | X)
            echo -e ""
            echo -e "${green}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${neutral}"
            echo -e "${green}â•‘                    Terima kasih telah menggunakan                     â•‘${neutral}"
            echo -e "${green}â•‘                       ALRESCHA79 VPN PANEL                            â•‘${neutral}"
            echo -e "${green}â•‘                                                                       â•‘${neutral}"
            echo -e "${green}â•‘                 ğŸ“± Telegram: https://t.me/Alrescha79                  â•‘${neutral}"
            echo -e "${green}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            echo -e ""
            exit 0
            ;;
        *)
            echo -e ""
            echo -e "${red}Pilihan tidak valid! Silahkan pilih menu yang tersedia.${neutral}"
            echo -e "${yellow}Tekan Enter untuk mencoba lagi...${neutral}"
            read
            display_menu
            ;;
    esac
}

