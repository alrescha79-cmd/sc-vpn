fi

# Backup konfigurasi lama jika ada
if [ -f /root/.vars ]; then
    cp /root/.vars /root/.vars.backup.$(date +%Y%m%d_%H%M%S)
    rm -f /root/.vars
fi

echo "bot_token=\"$bot_token\"" >> /root/.vars
echo "telegram_id=\"$chat_id\"" >> /root/.vars
