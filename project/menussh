        # Function to lock SSH account
        function lock_ssh() {
            clear
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            echo -e "${orange}â•‘                      ${green}LOCK SSH OVPN ACCOUNT${orange}                      â•‘${neutral}"
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            echo -e ""
            NUMBER_OF_CLIENTS=$(grep -c -E "^### " "/etc/ssh/.ssh.db")
            if [[ ${NUMBER_OF_CLIENTS} == '0' ]]; then
                echo -e " ${red}No registered clients found!${neutral}"
                echo -e ""
                echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e " Press Enter to return to menu"
                read
                return
            fi
            echo -e " ${green}NO  USERNAME         EXPIRY DATE${neutral}"
            echo -e " â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
            grep -E "^### " "/etc/ssh/.ssh.db" | cut -d ' ' -f 2-3 | awk '{printf " %-3s %-15s %s\n", NR")", $1, $2}' | while read line; do
                echo -e "$line"
            done
            echo -e ""
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"

            until [[ ${CLIENT_NUMBER} -ge 1 && ${CLIENT_NUMBER} -le ${NUMBER_OF_CLIENTS} ]]; do
                if [[ ${NUMBER_OF_CLIENTS} == '1' ]]; then
                    read -rp "Select client number [1]: " CLIENT_NUMBER
                else
                    read -rp "Select client number [1-${NUMBER_OF_CLIENTS}]: " CLIENT_NUMBER
                fi

                # Add exception handling for non-numeric input
                if ! [[ ${CLIENT_NUMBER} =~ ^[0-9]+$ ]]; then
                    echo "Error: Please enter a valid number."
                    CLIENT_NUMBER=0
                fi
            done

            username=$(grep -E "^### " "/etc/ssh/.ssh.db" | cut -d ' ' -f 2 | sed -n "${CLIENT_NUMBER}"p)
            if ! grep -q "^$username:" /etc/passwd; then
                echo "Error: Username $username not found in the system."
                read -n 1 -s -r -p "Press any key to return to menu"
                return
            fi

            if passwd -S "$username" | grep -q "L"; then
                echo "Account $username is already locked."
                read -n 1 -s -r -p "Press any key to return to menu"
                return
            fi

            # Add exception for root and admin
            if [[ "$username" == "root" || "$username" == "admin" ]]; then
                echo "Error: Cannot lock $username account as it is a critical system account."
                read -n 1 -s -r -p "Press any key to return to menu"
                return
            fi

            if passwd -l "$username"; then
                clear
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e "${green}â•‘                        ${blue}ACCOUNT LOCKED${green}                           â•‘${neutral}"
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e ""
                echo -e " ${green}âœ“${neutral} Username ${green}$username${neutral} successfully LOCKED!"
                echo -e " ${green}âœ“${neutral} Login access has been disabled"
                echo -e ""
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"

                # Add locking log
                echo "$(date): Account $username locked" >>/var/log/ssh_account_actions.log

                echo -e " Press any key to return to menu"
                read -n 1 -s -r
            else
                clear
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e "${red}â•‘                           ${blue}LOCK FAILED${red}                           â•‘${neutral}"
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e ""
                echo -e " ${red}âœ—${neutral} Failed to lock account $username"
                echo -e ""
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e " Press any key to return to menu"
                read -n 1 -s -r
            fi
        }

        # Function to unlock SSH account
        function unlock_ssh() {
            clear
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            echo -e "${orange}â•‘                     ${green}UNLOCK SSH OVPN ACCOUNT${orange}                     â•‘${neutral}"
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            echo -e ""
            NUMBER_OF_CLIENTS=$(grep -c -E "^### " "/etc/ssh/.ssh.db")
            if [[ ${NUMBER_OF_CLIENTS} == '0' ]]; then
                echo -e " ${red}No registered clients found!${neutral}"
                echo -e ""
                echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e " Press Enter to return to menu"
                read
                return
            fi
            echo -e " ${green}NO  USERNAME         EXPIRY DATE${neutral}"
            echo -e " â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
            grep -E "^### " "/etc/ssh/.ssh.db" | cut -d ' ' -f 2-3 | awk '{printf " %-3s %-15s %s\n", NR")", $1, $2}' | while read line; do
                echo -e "$line"
            done
            echo -e ""
            echo -e "${orange}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"

            until [[ ${CLIENT_NUMBER} -ge 1 && ${CLIENT_NUMBER} -le ${NUMBER_OF_CLIENTS} ]]; do
                if [[ ${NUMBER_OF_CLIENTS} == '1' ]]; then
                    read -rp "Select client number [1]: " CLIENT_NUMBER
                else
                    read -rp "Select client number [1-${NUMBER_OF_CLIENTS}]: " CLIENT_NUMBER
                fi

                # Add exception handling for non-numeric input
                if ! [[ ${CLIENT_NUMBER} =~ ^[0-9]+$ ]]; then
                    echo "Error: Please enter a valid number."
                    CLIENT_NUMBER=0
                fi
            done

            username=$(grep -E "^### " "/etc/ssh/.ssh.db" | cut -d ' ' -f 2 | sed -n "${CLIENT_NUMBER}"p)
            if ! grep -q "^$username:" /etc/passwd; then
                echo "Error: Username $username not found in the system."
                read -n 1 -s -r -p "Press any key to return to the menu"
                return
            fi

            if ! passwd -S "$username" | grep -q "L"; then
                echo "Account $username is already unlocked."
                read -n 1 -s -r -p "Press any key to return to the menu"
                return
            fi

            if passwd -u "$username"; then
                clear
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e "${green}â•‘                       ${blue}ACCOUNT UNLOCKED${green}                        â•‘${neutral}"
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e ""
                echo -e " ${green}âœ“${neutral} Username ${green}$username${neutral} successfully UNLOCKED!"
                echo -e " ${green}âœ“${neutral} Login access has been restored"
                echo -e ""
                echo -e "${green}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            else
                clear
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e "${red}â•‘                          ${blue}UNLOCK FAILED${red}                          â•‘${neutral}"
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
                echo -e ""
                echo -e " ${red}âœ—${neutral} Failed to unlock account $username"
                echo -e ""
                echo -e "${red}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${neutral}"
            fi
            echo -e " Press any key to return to menu"
            read -n 1 -s -r
        }
